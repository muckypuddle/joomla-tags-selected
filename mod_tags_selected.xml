<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site"
	method="upgrade">
	<name>Selected Tags</name>
	<author>Joomla! Project</author>
	<creationDate>January 2013</creationDate>
	<copyright>Copyright (C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.1.0</version>
	<description>MOD_TAGS_SELECTED_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_tags_selected">mod_tags_selected.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_tags_selected.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_tags_selected.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_tags_selected.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_TAGS_SELECTED" />
	<config>
		<fields name="params">
			<fieldset name="basic">
                <field name="selected_tags" type="tag" label="JTAG" description="JTAG_DESC" mode="ajax"  multiple="true" />
				
				<field name="content_types" type="sql" label="Content Types" description="Limit tagged items to specified content types" query="SELECT type_id AS value, type_title FROM #__content_types" value_field="type_title" multiple="multiple" /> 
				
				<field
					name="maximum"
					type="integer"
					default="5"
					first="1"
					last="20"
					step="1"
					label="MOD_TAGS_SELECTED_MAX_LABEL"
					description="MOD_TAGS_SELECTED_MAX_DESC">
				</field>
				
				<field name="include_children" type="radio" default="0" class='btn-group btn-group-yesno' label="Include Children?" description="Specify whether to include results from child tags of those selected">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				
				<field name="match_logic" type="radio" default="0" class='btn-group btn-group-yesno' label="Tag Filter Logic" description="Specify whether results need to match any tag, or all tags">
					<option value="1">Any Tag</option>
					<option value="0">All Tags</option>
				</field>
				
				<field name="order_by_option" type="list" default="c.core_title" label="Order" description="Select column to order by">
					<option value="c.core_title">Title</option>
					<option value="c.core_created_time">Creation Date</option>
					<option value="c.core_modified_time">Modification Date</option>
				</field>				
				
				<field name="order_dir" type="radio" default="ASC" class='btn-group btn-group-yesno'  label="Order Direction" description="Select ordering column direction">
					<option value="ASC">Ascending</option>
					<option value="DESC">Descending</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="owncache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
